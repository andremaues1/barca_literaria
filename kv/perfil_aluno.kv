<PerfilAluno>:
    FloatLayout:
        id: perfil_central

        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "Images/quadro_peixes.jpg"
        Image:
            pos_hint:{"right":1,"top":0.87}
            size_hint: 1, 0.2
            source:"Images/barca.jpg"
            id: foto_perfil

        ImageButton:
            pos_hint: {"right":0.15,"top":0.45}
            size_hint: 0.2, 0.8
            source: "Images/voltar.png"
            on_release: app.mudar_tela("homepage")


        ScrollView:
            pos_hint: {"right":1,"top":0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: lista_alunos
                spacing: 2,2
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
                font_size: root.calculate_font_size(self.width)