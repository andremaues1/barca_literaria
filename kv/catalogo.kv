<Catalogo>:
    FloatLayout:

        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "Images/imagem_barcos.jpg"
        Image:
            pos_hint:{"right":1,"top":0.78}
            size_hint: 1, 0.2
            source:"Images/barca.jpg"
            id: foto_perfil

        Button:
            pos_hint:{"right":0.38,"top":0.295}
            color: 0,0,0,1
            text: 'Adicionar livro'
            size_hint: None, None
            size: 180, 70
            background_color: 0, 0, 0, 0  # Torna o fundo padrão transparente
            on_release: app.criar_pop_up()
            canvas.before:
                Color:
                    rgba: (0, 0, 0, 0.03) if self.state == 'normal' else (0, 0, 0, 0.3)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50, 50, 50, 50]  # Raios para criar pontas arredondadas
                Color:
                    rgba: 135/255,206/255,250/255,0.9
                Line:
                    width: 2
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 50, 50, 50, 50)
        Button:
            pos_hint:{"right":0.81,"top":0.295}
            color: 0,0,0,1
            text: 'Excluir livro'
            size_hint: None, None
            size: 180, 70
            background_color: 0, 0, 0, 0  # Torna o fundo padrão transparente
            on_release: app.criar_pop_up2()
            canvas.before:
                Color:
                    rgba: (0, 0, 0, 0.03) if self.state == 'normal' else (0, 0, 0, 0.3)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [50, 50, 50, 50]  # Raios para criar pontas arredondadas
                Color:
                    rgba: 1,0,0,0.8
                Line:
                    width: 2
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 50, 50, 50, 50)





